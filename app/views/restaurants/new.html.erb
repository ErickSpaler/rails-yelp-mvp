<div class="container">
  <h1>New restaurant</h1>

  <%= simple_form_for @restaurant do |f| %>
    <%= f.input :name %>
    <%= f.input :address %>
    <%= f.input :phone_number %>
    <%= f.input :category, :collection => @category %>
    <div class="btn btn-primary"><%= f.button :submit %></div>
  <% end %>
</div>
